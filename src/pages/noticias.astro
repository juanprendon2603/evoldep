      main {
        padding: 6rem 1rem 2rem 1rem; /* Ajustar el padding-top para dar espacio al navbar */
      }
      section {
        margin-bottom: 2rem;
      }

      h2 {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 2.5rem;
    color: #ff6600;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
  }
      .widget-row {
        display: flex;
        justify-content: space-around;
        gap: 1rem; /* Space between widgets */
        flex-wrap: wrap; /* Ensure widgets wrap on smaller screens */
      }
      .widget-container {
        flex: 1;
        max-width: 500px; /* Same width for uniformity */
        margin: 0 1rem;
      }
      .widget-container h3 {
        margin-bottom: 1rem;
      }
      .fb-page,
      .instagram-media,
      .tiktok-embed {
        width: 100%;
      }


      
   
   
      .news-column {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }
   
      .news-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
      }
      .news-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 2rem;
}

.news-large {
  width: 80%;
  border: 1px solid #ddd;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  background-color: #ff0000; /* Rojo para la noticia grande */
}

.news-row {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 1rem;
  width: 100%;
  max-width: 1200px;
}

.news-small {
  border: 1px solid #ddd;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  background-color: #ff6600; /* Naranja para las noticias pequeñas */
  height: 80%;

}

.news-large img {
  padding: 1rem; /* Ajusta el valor según lo necesites */
  box-sizing: border-box; /* Asegura que el padding no afecte el tamaño total */

  width: 100%;
  height: auto;
}

.news-content h3,
.news-content p {
  color: #ffffff; /* Blanco para el título y la descripción */
}
.news-small img {

  padding: 1rem; /* Ajusta el valor según lo necesites */
  box-sizing: border-box; /* Asegura que el padding no afecte el tamaño total */
  width: 100%;
  height: 50%;
}

@media (max-width: 768px) {
  .news-row {
    grid-template-columns: 1fr;
  }
}

  
      .news-content {
        padding: 1rem;
      }
      .news-content h3 {
        margin: 0 0 0.5rem;
      }
      .news-content p {
        margin: 0 0 1rem;
      }
      .btn {
        display: inline-block;
        padding: 0.5rem 1rem;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
      }
      .news-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1rem;
        margin-top: 2rem;
      }

      @media (max-width: 768px) {
    .widget-row {
      flex-direction: column; /* Coloca las redes sociales en una columna */
      align-items: center;
    }

    .news-container {
      flex-direction: column; /* Alinea las noticias en una columna */
    }

    .news-column {
      flex-direction: column; /* Asegura que las dos noticias se alineen en columna */
    }

    .news-grid {
      grid-template-columns: 1fr; /* Muestra las noticias en una sola columna */
    }

  

    .btn {
      width: 90%;
      text-align: center;
    }

    .news-small {
  height: auto;

}
