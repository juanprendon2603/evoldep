  .timeline::after {
    content: "";
    position: absolute;
    width: 6px;
    background-color: #ff6600;
    top: 0;
    bottom: 0;
    left: 50%;
    margin-left: -3px;
  }

  .timeline-item {
    padding: 20px 40px;
    position: relative;
    background: white;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    width: 45%;
    margin-bottom: 2rem;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    opacity: 0;
    transform: translateX(-100%);
    animation: slide-in-left 0.5s forwards;
  }

  .timeline-item.right {
    left: 48.9%;
    transform: translateX(100%);
    animation: slide-in-right 0.5s forwards;
  }

  .timeline-item.left {
    left: -7%;
  }

  .timeline-item.left::before {
    content: " ";
    position: absolute;
    top: 15px;
    right: -15px;
    border-width: 15px;
    border-style: solid;
    border-color: transparent transparent transparent white;
  }

  .timeline-item.right::before {
    content: " ";
    position: absolute;
    top: 15px;
    left: -15px;
    border-width: 15px;
    border-style: solid;
