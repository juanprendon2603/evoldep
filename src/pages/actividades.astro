<style>
 body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background: linear-gradient(to bottom, #003366 0%, #66ccff 100%);
}

main {
  padding: 8rem 1rem;
  flex: 1;
}

section {
  margin-bottom: 2rem;
}

.timeline-section h2,
.activities-section h2 {
  text-align: center;
  color: #ff6600;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
  margin-bottom: 4rem;
}

.timeline {
  position: relative;
  max-width: 1200px;
  margin: 0 auto;
}

.timeline::after {
  content: '';
  position: absolute;
  width: 6px;
  background-color: #ff6600;
  top: 0;
  bottom: 0;
  left: 50%;
  margin-left: -3px;
}

.timeline-item {
  padding: 20px 40px;
  position: relative;
  background: white;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  width: 45%;
  margin-bottom: 2rem;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  opacity: 0;
  transform: translateX(-100%);
  animation: slide-in-left 0.5s forwards;
}

.timeline-item.right {
  left: 48.9%;
  transform: translateX(100%);
  animation: slide-in-right 0.5s forwards;
}

.timeline-item.left {
  left: -0.5%;
}

.timeline-item.left::before {
  content: " ";
  position: absolute;
  top: 15px;
  right: -15px;
  border-width: 15px;
  border-style: solid;
  border-color: transparent transparent transparent white;
}

.timeline-item.right::before {
  content: " ";
  position: absolute;
  top: 15px;
  left: -15px;
  border-width: 15px;
  border-style: solid;
  border-color: transparent white transparent transparent;
}

.timeline-item:hover {
  transform: translateY(-10px);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
}

.timeline-content {
  text-align: center;
}

.date {
  font-size: 1.5rem;
  font-weight: bold;
  color: #003366;
  margin-bottom: 1rem;
}

img {
  max-width: 100%;
  border-radius: 10px;
  margin-bottom: 1rem;
}

.read-more {
  background-color: #ff6600;
  color: white;
  border: none;
  padding: 0.5rem 1rem;
  border-radius: 5px;
  cursor: pointer;
  transition: background-color 0.3s ease, transform 0.3s ease;
}

.read-more:hover {
  background-color: #cc5200;
  transform: scale(1.05);
}

.circle {
  position: absolute;
  background-color: #ff6600;
  border-radius: 50%;
  width: 20px;
  height: 20px;
}

.circle.start {
  left: 50%;
  transform: translateX(-50%);
  top: -10px; /* Adjust to position above the line */
}

.circle.end {
  right: 0;
  top: -10px; /* Adjust to position above the line */
}

.activities-section p {
  text-align: center;
  max-width: 800px;
  margin: 0 auto;
  margin-bottom: 2rem;
}

.gallery {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 1rem;
}

.gallery img {
  width: calc(25% - 1rem);
  height: auto;
  border-radius: 10px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.gallery img:hover {
  transform: scale(1.05);
}

@keyframes slide-in-left {
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes slide-in-right {
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

</style>
