    flex: 1 1 45%;
    max-width: 600px;
    background-color: #f9f9f9;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
  }

  .map-container {
    flex: 1 1 45%;
    min-width: 300px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

