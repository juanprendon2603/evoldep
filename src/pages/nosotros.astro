    carousel {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch; /* Propiedad para mejor soporte en iOS */
    gap: 1rem;
    padding: 2rem 1rem;
    margin-bottom: 2rem;
  }

  slide {
    scroll-snap-align: start;
    flex: 0 0 auto;
    min-width: 300px; /* Ancho mínimo de cada tarjeta */
    max-width: 80%; /* Ancho máximo de cada tarjeta */
    background-color: #f9f9f9;
    padding: 1rem;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

    .card-container {
    display: flex;
    overflow-x: hidden; /* Oculta el desbordamiento horizontal */
    gap: 1rem;
    padding: 2rem 0;
    margin-bottom: 2rem;
    position: relative;
  }

  .card {
    flex: 0 0 auto;
    min-width: 300px; /* Ancho mínimo de cada tarjeta */
    max-width: 80%; /* Ancho máximo de cada tarjeta */
    background-color: #f9f9f9;
    padding: 1rem;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    opacity: 0.5; /* Opacidad inicial */
    transition: opacity 0.3s ease-in-out;
  }

  .card.active {
    opacity: 1; /* Tarjeta activa con opacidad completa */
  }

  .card img {
    width: 100%;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .card-content {
    padding: 1rem;
  }

  .card-content h3 {
    color: #ff6600;
    margin-bottom: 0.5rem;
  }

  .card-content p {
    text-align: justify;
  }

  .nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: #003366;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    font-size: 1.2rem;
    cursor: pointer;
    z-index: 100;
    transition: background 0.3s ease;
  }

  .nav-btn:hover {
    background: #ff6600;
  }

  .nav-btn.prev {
    left: 1rem;
  }

  .nav-btn.next {
    right: 1rem;
  }
</style>

<script>
  // Script para manejar la navegación del carrusel
const carousel = document.querySelector('carousel');
if (!carousel) {
  console.error('No se encontró el elemento "carousel" en el DOM.');
} else {
  const cardContainer = carousel.querySelector('.card-container');
  if (!cardContainer) {
    console.error('No se encontró el elemento ".card-container" dentro de "carousel".');
  } else {
    const cards = Array.from(cardContainer.querySelectorAll('.card'));
    let currentIndex = 0;

    // Función para mostrar la tarjeta actual
    function showCard(index: number) {
      cards.forEach((card, idx) => {
        if (idx === index) {
          card.classList.add('active');
        } else {
          card.classList.remove('active');
        }
      });
    }

    // Función para navegar al siguiente tarjeta
    function nextCard() {
      currentIndex = (currentIndex + 1) % cards.length;
      showCard(currentIndex);
    }

    // Función para navegar a la tarjeta anterior
    function prevCard() {
      currentIndex = (currentIndex - 1 + cards.length) % cards.length;
      showCard(currentIndex);
    }

    // Event listeners para los botones de navegación
    const nextBtn = carousel.querySelector('.next');
    if (nextBtn) {
      nextBtn.addEventListener('click', nextCard);
    } else {
      console.error('No se encontró el botón ".next" dentro de "carousel".');
    }

    const prevBtn = carousel.querySelector('.prev');
    if (prevBtn) {
      prevBtn.addEventListener('click', prevCard);
    } else {
      console.error('No se encontró el botón ".prev" dentro de "carousel".');
    }

    // Mostrar la primera tarjeta al cargar la página
    showCard(currentIndex);
  }
}

</script>