    background: url('/images/banner.jpg') no-repeat center center;
    background-size: cover;
    color: white;
    text-align: center;
    padding: 14rem 1rem;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 20vh;
    
  }
  
