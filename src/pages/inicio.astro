  .hero {
    background: url('/images/banner.jpg') no-repeat center center;
    background-size: cover;
    color: white;
    text-align: center;
    padding: 14rem 1rem;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 70vh;
    
  }
  .hero-text {
    background: rgba(0, 0, 0, 0.5);
    padding: 2rem;
    border-radius: 10px;
  }
  .hero h1 {
    font-size: 3rem;
    margin: 0;
  }
  .hero p {
    font-size: 1.5rem;
    margin: 0;
  }
  
  section {
    margin-bottom: 2rem;

  }
  #fortalezas h2,
  #eventos h2 {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 2.5rem;
    color: #ff6600;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
  }
  .strengths {
  display: grid;
  grid-template-columns: repeat(4, 1fr); /* 4 columnas para pantallas grandes */
  gap: 1rem;
  justify-items: center;
}

  .events {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
    justify-content: center;
  }
  .strength {
    width: 100%;
    max-width: 300px;
    background: linear-gradient(to bottom, #003366 0%, #66ccff 100%);
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
    transition: transform 0.3s ease, background 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .strength:hover {
    transform: translateY(-10px);
    background: linear-gradient(135deg, #cc5200, #ff6600);
  }
  .icon {
    margin-bottom: 1rem;
  }
  .icon img {
    width: 60px;
    height: 60px;
    filter: brightness(0) invert(1);
  }
  .strength h3 {
    font-size: 1.5rem;
    margin: 1rem 0 0;
    color: white;
    letter-spacing: 2px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .strength p {
    font-size: 1rem;
    color: #fff;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  .event {
    width: 100%;
    max-width: 300px;
    background: white;
    border: 2px solid #003366;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    text-align: left;
    transition: transform 0.3s ease, border-color 0.3s ease;
    display: flex;
    flex-direction: column;
  }
  .event:hover {
    transform: translateY(-10px);
    border-color: #ff6600;
  }
  .event h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: #003366;
    text-align: center;

  }
  .event p {
    font-size: 1rem;
    color: #333;
  }

  @media (max-width: 768px) {

    .hero h1 {
    font-size: 2rem;
    margin: 0;
  }

  

    #fortalezas h2,
  #eventos h2 {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 2rem;
    color: #ff6600;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
  }

  .hero p {
    font-size: 1rem;
    margin: 0;
  }
  
  .strengths {
    grid-template-columns: repeat(1, 1fr); /* 2 columnas para pantallas más pequeñas */
  }

