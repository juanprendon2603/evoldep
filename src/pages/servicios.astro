  main {
    padding: 8rem 1rem;
  }
  section {
    margin-bottom: 1rem;
  }
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .text-list li {
    display: flex;
    align-items: center;
    margin-bottom: 0.5rem;
  }
  .text-list i {
    margin-right: 0.5rem;
    color: #ff6600;
  }

  h2 {
    color: #ff6600;
    text-align: center;
    margin-bottom: 1rem;
  }
  p {
    text-align: justify;
  }

  .table-wrapper {
    display: flex;
    justify-content: center;
    padding: 0 1rem;
  }
  table {
    width: 80%;
    border-collapse: collapse;
  }
  th,
  td {
    padding: 1rem;
    border: 1px solid #003366;
    text-align: left;
  }
  th {
    background-color: #003366;
    color: white;
  }
  tbody tr:nth-child(odd) {
    background-color: #f2f2f2;
  }
  tbody tr:nth-child(even) {
    background-color: #e6f7ff;
  }

  .container {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    max-width: 1200px; /* Ajusta el ancho máximo del contenedor */
    margin: 0 auto; /* Centra el contenedor horizontalmente */
  }

  .left-column,
  .right-column {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .left-column {
    margin-right: 1rem; /* Espacio entre las columnas */
  }

  .right-column {
    margin-left: 1rem; /* Espacio entre las columnas */
  }

  .section-container,
  .section-bandera {
    background-color: #f9f9f9;
    padding: 1rem;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .section-p {
    background-color: #f9f9f9;
    padding: 1rem;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .section-bandera {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100%; /* Asegura que la columna derecha tenga la misma altura */
  }

  /* Igualar alturas de columnas */
  .container {
    align-items: stretch;
  }
