---
const currentPath = Astro.url.pathname;
const isActive = (path: string) => currentPath === path ? 'active' : '';
---

<div class="top-bar">
  <div class="info">
    <div><img src="/images/phone.png" alt="Phone">304 373 5676</div>
    <div><img src="/images/email.png" alt="Email">info@evoldep.com</div>
    <div><img src="/images/email.png" alt="Email">evoldep@gmail.com</div>
    <div><img src="/images/location.png" alt="Location">Florida, Valle del Cauca, Colombia</div>
    <div>NIT: 900874043-1</div>
  </div>
  <div class="social-icons">
    <a href="https://facebook.com/tu_usuario" target="_blank"><img src="/images/facebook.png" alt="Facebook"></a>
    <a href="https://twitter.com/tu_usuario" target="_blank"><img src="/images/twitter.png" alt="Twitter"></a>
    <a href="https://instagram.com/tu_usuario" target="_blank"><img src="/images/instagram.png" alt="Instagram"></a>
    <a href="https://tiktok.com/@tu_usuario" target="_blank"><img src="/images/tik-tok.png" alt="TikTok"></a>
  </div>
</div>
<nav class="navbar">
  <div class="container">
   
    
    <a href="/" class="logo-link">
      <img src="/images/logo.png" alt="Club Evolución Deportiva" class="logo">
      <span>Club Evolución Deportiva</span>
    </a>
    <ul class="nav-links">
      <li><a href="/inicio" class={isActive('/inicio')}>Inicio</a></li>
      <li><a href="/nosotros" class={isActive('/nosotros')}>Nosotros</a></li>
      <li><a href="/servicios" class={isActive('/servicios')}>Servicios</a></li>
      <li><a href="/actividades" class={isActive('/actividades')}>Actividades y Torneos</a></li>
      <li><a href="/noticias" class={isActive('/noticias')}>Noticias y Destacados</a></li>
      <li><a href="/contacto" class={isActive('/contacto')}>Contáctenos</a></li>
    </ul>
  </div>
</nav>

<script>
  window.addEventListener('scroll', function() {
    const topBar = document.querySelector('.top-bar') as HTMLElement;
    const navbar = document.querySelector('.navbar') as HTMLElement;
    if (topBar && navbar) {
      if (window.scrollY > 50) {
        topBar.style.transform = 'translateY(-100%)';
        navbar.style.top = '0';
      } else {
        topBar.style.transform = 'translateY(0)';
        navbar.style.top = '30px'; // Asegúrate de que este valor coincide con la altura de tu top-bar
      }
    }
  });
</script>

<style>
  .top-bar {
    background-color: #002244;
    color: #fff;
    padding: 0.5rem 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: transform 0.3s ease-in-out;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1100; /* Asegúrate de que la top-bar esté encima del navbar */
  }
  .top-bar .info {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }
  .top-bar .info img {
    width: 20px;
    height: 20px;
    margin-right: 0.5rem;
  }
  .top-bar .social-icons {
    display: flex;
    gap: 1rem;
  }
  .top-bar .social-icons img {
    width: 20px;
    height: 20px;
  }
  .navbar {
    background-color: #003366;
    color: #fff;
    padding: 1rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    position: fixed;
    width: 100%;
    z-index: 1000;
    transition: top 0.3s ease-in-out;
    top: 30px;
  }
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 auto;
    padding: 0 1rem;
  }
  .logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #fff;
  }
  .logo-link .logo {
    max-width: 50px;
    margin-right: 10px;
  }
  .logo-link span {
    font-size: 1.5rem;
    font-weight: bold;
  }
  .nav-links {
    list-style: none;
    display: flex;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
  }
  .nav-links a {
    text-decoration: none;
    color: #fff;
    transition: color 0.3s ease;
    position: relative;
    padding-bottom: 5px;
  }
  .nav-links a:hover {
    color: #cc5200;
  }
  .nav-links a.active {
    color: #cc5200;
  }
  .nav-links img {
    width: 24px;
    height: 24px;
    transition: transform 0.3s ease;
  }
  .nav-links img:hover {
    transform: scale(1.2);
  }
  main {
    padding-top: 100px; /* Altura combinada de la top-bar y el navbar */
  }
</style>
