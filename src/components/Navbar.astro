---
const currentPath = Astro.url.pathname;
const isActive = (path: string) => currentPath === path ? 'active' : '';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Club Evolución Deportiva</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <style>
    /* Incluye aquí el CSS */
  </style>
</head>
<body>
  <div class="top-bar">
    <div class="info">
      <div><i class="fa fa-phone"></i> 304 373 5676</div>
      <div><i class="fa fa-envelope"></i> evoldep@gmail.com</div>
      <div><i class="fa-solid fa-location-dot"></i> Florida, Valle del Cauca, Colombia</div>
      <div><i class="fa-solid fa-file-lines"></i> NIT: 900874043-1</div>
    </div>
    <div class="social-icons">
      <a href="https://facebook.com/evoldep" target="_blank"><img src="/images/facebook.png" alt="Facebook"></a>
      <a href="https://x.com/evoldep" target="_blank"><img src="/images/x.png" alt="Twitter"></a>
      <a href="https://instagram.com/evoldep" target="_blank"><img src="/images/instagram.png" alt="Instagram"></a>
      <a href="https://tiktok.com/@tevoldep" target="_blank"><img src="/images/tik-tok.png" alt="TikTok"></a>
    </div>
  </div>

  <nav class="navbar">
    <div class="menu-toggle">
      <i class="fa fa-bars"></i>
    </div>

    <div class="container">
      <a href="/" class="logo-link">
        <img src="/images/logo.png" alt="Club Evolución Deportiva" class="logo">
        <span>Club Evolución Deportiva</span>
      </a>
      <ul class="nav-links">
        <li><a href="/inicio" class={isActive('/inicio')}>Inicio</a></li>
        <li><a href="/nosotros" class={isActive('/nosotros')}>Nosotros</a></li>
        <li><a href="/servicios" class={isActive('/servicios')}>Servicios</a></li>
        <li><a href="/actividades" class={isActive('/actividades')}>Actividades y Torneos</a></li>
        <li><a href="/noticias" class={isActive('/noticias')}>Noticias y Destacados</a></li>
        <li><a href="/contacto" class={isActive('/contacto')}>Contáctenos</a></li>
      </ul>
    </div>
  </nav>

  <!-- Menú Lateral -->
  <div class="sidebar-menu">
    <div class="menu-toggle-close">
      <i class="fa fa-times"></i>
    </div>
    <ul class="nav-links">
      <li><a href="/inicio" class={isActive('/inicio')}>Inicio</a></li>
      <li><a href="/nosotros" class={isActive('/nosotros')}>Nosotros</a></li>
      <li><a href="/servicios" class={isActive('/servicios')}>Servicios</a></li>
      <li><a href="/actividades" class={isActive('/actividades')}>Actividades y Torneos</a></li>
      <li><a href="/noticias" class={isActive('/noticias')}>Noticias y Destacados</a></li>
      <li><a href="/contacto" class={isActive('/contacto')}>Contáctenos</a></li>
    </ul>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const menuToggle = document.querySelector('.menu-toggle') as HTMLElement | null;
      const sidebarMenu = document.querySelector('.sidebar-menu') as HTMLElement | null;
      const body = document.body;
  
      if (menuToggle && sidebarMenu) {
        menuToggle.addEventListener('click', function() {
          sidebarMenu.classList.toggle('open');
          body.classList.toggle('menu-open');
        });
  
        // Cierra el menú cuando se hace clic fuera del menú
        document.addEventListener('click', function(event) {
          // Verifica si el evento target es un nodo y no está contenido en el menú o el botón de menú
          const target = event.target as Node | null;
          if (sidebarMenu.classList.contains('open') &&
              target instanceof Node &&
              !sidebarMenu.contains(target) &&
              !menuToggle.contains(target)) {
            sidebarMenu.classList.remove('open');
            body.classList.remove('menu-open');
          }
        });
      }
    });


    window.addEventListener('scroll', function() {
    const topBar = document.querySelector('.top-bar') as HTMLElement;
    const navbar = document.querySelector('.navbar') as HTMLElement;
    if (topBar && navbar) {
      if (window.scrollY > 50) {
        topBar.style.transform = 'translateY(-100%)';
        navbar.style.top = '0';
      } else {
        topBar.style.transform = 'translateY(0)';
        navbar.style.top = '30px'; // Asegúrate de que este valor coincide con la altura de tu top-bar
      }
    }
  });
  </script>
</body>
</html>

<style>
  .top-bar {
    background-color: #002244;
    color: rgba(255, 255, 255, 0.6); /* Ajusta el valor de opacidad (0.0 a 1.0) según lo necesites */

    padding: 0.5rem 1rem;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: transform 0.3s ease-in-out;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 1100; /* Asegúrate de que la top-bar esté encima del navbar */
  }
  .top-bar .info {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }
  .top-bar .info img {
    width: 20px;
    height: 20px;
    margin-right: 0.5rem;
  }
  .top-bar .social-icons {
    display: flex;
    gap: 1rem;
    margin-left: 1rem; /* Ajusta el valor según lo necesites */

  }
  .top-bar .social-icons img {
    width: 20px;
    height: 20px;
  }
  .navbar {
    background-color: #003366;
    color: #fff;
    padding: 1rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    position: fixed;
    width: 100%;
    z-index: 1000;
    transition: top 0.3s ease-in-out;
    top: 30px;
  }
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 auto;
    padding: 0 1rem;
  }
  .logo-link {
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #fff;
  }
  .logo-link .logo {
    max-width: 50px;
    margin-right: 10px;
  }
  .logo-link span {
    font-size: 1.5rem;
    font-weight: bold;
  }
  .nav-links {
    list-style: none;
    display: flex;
    gap: 1.5rem;
    margin-right: 1rem; /* Ajusta el valor según lo necesites */
    padding: 0;
  }
  .nav-links a {
    text-decoration: none;
    color: #fff;
    transition: color 0.3s ease;
    position: relative;
    padding-bottom: 5px;
  }
  .nav-links a:hover {
    color: #cc5200;
  }
  .nav-links a.active {
    color: #cc5200;
  }
  .nav-links img {
    width: 24px;
    height: 24px;
    transition: transform 0.3s ease;
  }
  .nav-links img:hover {
    transform: scale(1.2);
  }
  main {
    padding-top: 100px; /* Altura combinada de la top-bar y el navbar */
  }

  /* Estilos generales */
.menu-toggle {
  display: none;
  position: fixed;
  top: 10px;
  right: 10px;
  font-size: 1.5rem;
  color: #fff;
  cursor: pointer;
  z-index: 1200; /* Asegúrate de que el botón esté sobre el menú lateral */
}

@media (max-width: 768px) {
  .top-bar, .navbar {
    display: none;
  }

  .menu-toggle {
    display: block;
  }

  .sidebar-menu {
    position: fixed;
    top: 0;
    right: 0;
    height: 100%;
    width: 250px;
    background-color: #003366;
    color: #fff;
    transform: translateX(100%);
    transition: transform 0.3s ease;
    z-index: 1100;
  }

  .sidebar-menu.open {
    transform: translateX(0);
  }

  .sidebar-menu .nav-links {
    display: flex;
    flex-direction: column;
    margin-top: 2rem;
  }

  .sidebar-menu .nav-links a {
    padding: 1rem;
    border-bottom: 1px solid #fff;
  }
}

/* Estilos opcionales para la transición */
body.menu-open {
  overflow: hidden; /* Previene el desplazamiento del contenido en segundo plano */
}

</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">




