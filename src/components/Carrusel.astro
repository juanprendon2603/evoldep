<style>
  .carousel-container {
    text-align: center;
    position: relative;
  }

  .carousel-title {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 2.5rem;
    color: #ff6600;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
  }

  .card-container {
    display: flex;
    position: relative;
    overflow: hidden;
    justify-content: center;
  }

  .card {
    display: none;
    max-width: 60%;
    margin: 0 15px;
    transition:
      transform 0.5s ease,
      opacity 0.5s ease,
      box-shadow 0.5s ease;
    opacity: 0;
    transform: scale(0.8);
  }

  .card img {
    width: 80%;
    transition: transform 0.5s ease;
  }

  .card.active img {
    transform: scale(1.05);
  }

  .card.active {
    display: block;
    opacity: 1;
    transform: scale(1);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .card-content {
    transition: color 0.5s ease;
  }

  .card.active .card-content {
    color: #333;
  }

  .nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: #f1f1f1;
    color: #333;
    border: none;
    padding: 10px;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }

  .nav-btn.prev {
    left: 200px;
  }

  .nav-btn.next {
    right: 200px;
  }

  .nav-btn:hover {
    background-color: #333;
    color: #fff;
  }

  .nav-btn svg {
    width: 24px;
    height: 24px;
  }


  @media (max-width: 768px) {



.carousel-title h2 {
text-align: center;
margin-bottom: 2rem;
font-size: 2.5rem;
color: #ff6600;
text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.6);
}

.nav-btn.prev {
    left: 10px;
  }

  .nav-btn.next {
    right: 10px;
  }


  }


</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const cards = document.querySelectorAll(".card");
    const prevButton = document.querySelector(".nav-btn.prev");
    const nextButton = document.querySelector(".nav-btn.next");
    let currentIndex = 0;

    function updateCards() {
      cards.forEach((card, index) => {
        card.classList.remove("active");
        if (index === currentIndex) {
          card.classList.add("active");
        }
      });
    }

    if (prevButton) {
      prevButton.addEventListener("click", () => {
        currentIndex = (currentIndex - 1 + cards.length) % cards.length;
        updateCards();
      });
    }

    if (nextButton) {
      nextButton.addEventListener("click", () => {
        currentIndex = (currentIndex + 1) % cards.length;
        updateCards();
      });
    }

    updateCards();
  });
</script>
