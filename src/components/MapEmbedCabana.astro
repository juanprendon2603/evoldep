<!-- Map.astro -->
<div class="map-container">
  <iframe
    class="map-iframe"
    src="https://maps.google.com/maps?hl=en&q=Cancha la cabaña florida valle+(undefined)&ie=UTF8&t=h&z=16&iwloc=B&output=embed"
   >
  </iframe>
  <div class="map-credit">
    <div style="overflow: auto; height: 0pt; width: 0pt;">
      Powered by <a href="https://www.embedista.com/googlemapsembed">Google Map Embed</a> Code Generator
    </div>
    <script type="text/javascript" src="https://www.embedista.com/j/map.js"></script>
  </div>
</div>

<style>
  .map-container {
    position: relative;
    width: 100%;
    max-width: 700px; /* Ajusta el ancho máximo del contenedor */
    margin: 0 auto; /* Centra el contenedor horizontalmente */
  }

  .map-iframe {
    width: 100%;
    height: 400px;
    border: 0;
  }

  .map-credit {
    position: absolute;
    width: 100%;
    bottom: 10px;
    left: 0;
    text-align: center;
    color: #000;
  }

  @media (max-width: 768px) {
    .map-iframe {
      height: 300px; /* Ajusta la altura del iframe en pantallas pequeñas */
    }
  }
</style>
